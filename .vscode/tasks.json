{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Clean (GCC)",
            "type": "shell",
            "command": "make clean",
            "windows": {
                "command": "mingw32-make clean",
            },
            "options": {
                "cwd": "${workspaceRoot}/gcc"
            }, 
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Make Firmware (GCC)",
            "type": "shell",
            "command": "make -j8 all",
            "windows": {
                "command": "mingw32-make -j8 all",
            },
            "options": {
                "cwd": "${workspaceRoot}/gcc"
            }, 
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Make Firmware (ARMCC)",
            "type": "shell",
            "command": "make",
            "windows": {
                "command": "mingw32-make",
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }, 
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Make Clean (ARMCC)",
            "type": "shell",
            "command": "make clean",
            "windows": {
                "command": "mingw32-make clean",
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }, 
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Load Firmware (OpenOCD)",
            "type": "shell",
            "command": "openocd -f ./openocd/scripts/interface/stlink.cfg -f ./openocd/scripts/target/stm32f0x.cfg -c init -c \"reset halt\" -c \"flash write_image erase ./gcc/bwhoop 0x08000000\" -c \"verify_image ./gcc/bwhoop 0x08000000\" -c \"reset run\" -c shutdown",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Load Firmware (ST-FLASH)",
            "type": "shell",
            "command": "st-flash write ./bwhoop.bin 0x08000000",
            "options": {
                "cwd": "${workspaceRoot}/gcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}